{
    "name": "wallet-loans",
    "version": "1.0.0",
    "private": true,
    "scripts": {

        "run-script": "npx blueprint run --testnet --mnemonic ",

        "action": "blueprint run",
        "build": "blueprint build",
        "build-all": "rm -rf build && blueprint build manager && blueprint build pool  && blueprint build usdTon  && blueprint build userPosition && blueprint build usdTonWallet && blueprint build runecoinOwner  && blueprint build runecoin && blueprint build runecoinWallet",
        "test": "jest --verbose",

        "deploy-usdton": "yarn run-script deployUsdTon",
        "deploy-manager": "yarn run-script deployManager",
        "deploy-pool": "yarn run-script  deployPool",
        "deploy-runecoin-owner": "yarn run-script  deployRunecoinOwner",
        "deploy-runecoin": "yarn run-script  sendRunecoinToOwner",

        "set-deps": "yarn run-script  setDeps",
        "set-settings": "yarn run-script  setSettings",
        "update-price": "yarn run-script  updatePrice",
        
        "deploy-and-set": "yarn deploy-usdton && yarn deploy-manager && yarn deploy-pool && yarn deploy-runecoin-owner && yarn deploy-runecoin  &&  yarn set-deps",

        "deploy-runes-owner": "yarn run-script deployRunecoinOwner",
        "send-runes-to-owner": "yarn run-script sendRunecoinToOwner",
        "get-runes": "yarn run-script 0.2getRunecoins",
        "rune-info": "yarn run-script rune-info",

        "deposit-collateral": "yarn run-script 01depositCollateral",
        "mint-usdton": "yarn run-script 02mint",
        "repay-usdton": "yarn run-script 03burn",
        "withdraw-collateral": "yarn run-script 04withdrawCollateral",
        "get-info": "yarn run-script 0.0info"
    },
    "devDependencies": {
        "@ton/blueprint": "^0.19.0",
        "@ton/core": "~0",
        "@ton/crypto": "^3.2.0",
        "@ton/sandbox": "^0.17.0",
        "@ton/test-utils": "^0.4.2",
        "@ton/ton": "^13.11.1",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.20",
        "jest": "^29.7.0",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.3"
    },
    "dependencies": {
        "@aws-crypto/sha256-js": "^5.2.0"
    }
}
