{
    "name": "wallet-loans",
    "version": "1.0.0",
    "private": true,
    "scripts": {

        "run-script": "npx blueprint run --testnet --mnemonic ",

        "action": "blueprint run",
        "blueprint-build": "blueprint build",
        "build": "rm -rf build && blueprint build manager && blueprint build pool  && blueprint build usdTon  && blueprint build userPosition && blueprint build usdTonWallet && blueprint build runecoinOwner  && blueprint build runecoin && blueprint build runecoinWallet",
        "test": "jest --verbose",

        "deploy-usdton":            "yarn run-script deploy_usd_ton",
        "deploy-manager":           "yarn run-script deploy_manager",
        "deploy-pool":              "yarn run-script deployPool",
        "deploy-runecoin-owner":    "yarn run-script deployRunecoinOwner",
        "deploy-runecoin":          "yarn run-script sendRunecoinToOwner",

        "deploy":   "yarn deploy-usdton && yarn deploy-manager && yarn deploy-pool && yarn deploy-runecoin-owner && yarn deploy-runecoin",

        "update-price":         "yarn run-script  updatePrice",
        "setup":    "yarn run-script setDeps && yarn run-script  setSettings && yarn update-price",

        "send-runes-to-owner":  "yarn run-script sendRunecoinToOwner",
        "get-runes":            "yarn run-script 0.2getRunecoins",

        "add-supply":           "yarn run-script 01_add_supply",
        "mint":                 "yarn run-script 02_mint",
        "burn":                 "yarn run-script 03_burn",
        "withdrawal-supply":    "yarn run-script 04_withdrawal_supply",


        "info-runa":            "yarn run-script info_runa",
        "info-user":            "yarn run-script info_user",
        "info-user-position":   "yarn run-script info_user_position"
    },
    "devDependencies": {
        "@ton/blueprint": "^0.19.0",
        "@ton/core": "~0",
        "@ton/crypto": "^3.2.0",
        "@ton/sandbox": "^0.17.0",
        "@ton/test-utils": "^0.4.2",
        "@ton/ton": "^13.11.1",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.20",
        "jest": "^29.7.0",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.3"
    },
    "dependencies": {
        "@aws-crypto/sha256-js": "^5.2.0"
    }
}
