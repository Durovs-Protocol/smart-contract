{
    "name": "wallet-loans",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "run-script": "npx blueprint run --testnet --mnemonic --tonviewer",
        "action": "blueprint run",
        "blueprint-build": "blueprint build",
        "build": "rm -rf build && blueprint build manager && blueprint build pool  && blueprint build usdTon  && blueprint build userPosition && blueprint build usdTonWallet && blueprint build runecoinOwner  && blueprint build runecoin && blueprint build runecoinWallet",
        "test": "jest --verbose",

        "deploy-pool": "yarn run-script deploy_pool",
        "deploy-manager": "yarn run-script deploy_manager",
        "deploy-usdton": "yarn run-script deploy_usd_ton",
        "deploy-runes-owner": "yarn run-script deploy_runecoin_owner",
        "deploy-runecoin": "yarn run-script deploy_send_runecoin_to_owner",
        
        "deploy": "yarn deploy-pool && yarn deploy-manager && yarn deploy-usdton && yarn deploy-runes-owner && yarn deploy-runecoin",
        
        "set-deps": "yarn run-script set_deps",
        "set-settings": "yarn run-script set_settings",
        "set-price": "yarn run-script set_price",
        "setup": "yarn set-deps && yarn set-settings && yarn set-price",

        "get-runes": "yarn run-script get_runecoins",
        "add-supply": "yarn run-script add_supply",
        "mint": "yarn run-script mint",
        "burn": "yarn run-script burn",
        "withdrawal-supply": "yarn run-script withdrawal_supply",
        "liquidation": "yarn run-script liquidation",

        "info-system": "yarn run-script info_system",
        "info-user": "yarn run-script info_user"
    },
    "devDependencies": {
        "@ton/blueprint": "^0.19.0",
        "@ton/core": "~0",
        "@ton/crypto": "^3.2.0",
        "@ton/sandbox": "^0.17.0",
        "@ton/test-utils": "^0.4.2",
        "@ton/ton": "^13.11.1",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.20",
        "jest": "^29.7.0",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.3"
    },
    "dependencies": {
        "@aws-crypto/sha256-js": "^5.2.0"
    }
}
