{
    "name": "runa-protocol",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "run-script": "npx blueprint run --testnet --mnemonic --tonviewer",
        "action": "blueprint run",
        "blueprint-build": "blueprint build",
        "build": "rm -rf build && blueprint build manager && blueprint build profitPool && blueprint build reservePool && blueprint build usdTon  && blueprint build userPosition && blueprint build usdTonWallet && blueprint build runaCoupon && blueprint build runaCouponWallet",
        "test": "jest --verbose",
        "install": "yarn build && yarn deploy && yarn setup",

        "deploy": "yarn deploy-reserve && yarn deploy-profit && yarn deploy-usdton && yarn deploy-manager",
        "deploy-reserve": "yarn run-script deploy_reserve",
        "deploy-profit": "yarn run-script deploy_profit",
        "deploy-usdton": "yarn run-script deploy_usd_ton",
        "deploy-manager": "yarn run-script deploy_manager",
        "deploy-coupon": "yarn run-script deploy_coupon",

        "setup": "yarn set-deps && yarn set-settings && yarn set-price",
        "set-deps": "yarn run-script set_deps",
        "set-settings": "yarn run-script set_settings",
        "set-price": "yarn run-script set_price",


        "V0-build": "blueprint build V0.manager &&  blueprint build V0.newManager",
        "V0-deploy": "yarn V0-deploy-manager && yarn V0-deploy-new-manager",
        "V0-deploy-reserve": "yarn  run-script deploy_reserve",
        "V0-deploy-manager": "yarn run-script deploy_manager",
        "V0-deploy-new-manager": "yarn run-script deploy_new_manager",

        "V0-setup": "yarn V0-set-deps && yarn V0-set-settings && yarn V0-set-price",
        "V0-set-settings": "yarn run-script set_settings",
        "V0-set-deps": "yarn run-script set_deps",
        "V0-set-price": "yarn run-script set_price",

        "V0-supply": "yarn run-script supply",
        "V0-withdraw": "yarn run-scriptt withdraw",
        "V0-migration": "yarn run-script migration",

        "supply": "yarn run-script supply",
        "mint": "yarn run-script mint",
        "burn": "yarn run-script burn",
        "withdraw": "yarn run-script withdraw",
        "liquidation": "yarn run-script liquidation",

        "info-access": "yarn run-script info_access",
        "info-system": "yarn run-script info_system",
        "info-user": "yarn run-script info_user",

        "set-holders": "yarn run-script tokenomica",
        "mint-to-holders": "yarn run-script tokenomica_mint",
        "generate-fake-wallets":"yarn run-script tokenomica_generate_fa",
        "get-runes": "yarn run-script get_runecoins",
        "stabilization": "yarn run-script stabilization"
    },
    "devDependencies": {
        "@ton/blueprint": "^0.19.0",
        "@ton/core": "~0",
        "@ton/crypto": "^3.2.0",
        "@ton/sandbox": "^0.17.0",
        "@ton/test-utils": "^0.4.2",
        "@ton/ton": "^13.11.1",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.20",
        "jest": "^29.7.0",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.3"
    },
    "dependencies": {
        "@aws-crypto/sha256-js": "^5.2.0"
    }
}
