{
    "name": "wallet-loans",
    "version": "1.0.0",
    "private": true,
    "scripts": {

        "run-script": "npx blueprint run --testnet --mnemonic ",

        "action": "blueprint run",
        "build": "blueprint build",
        "build-all": "rm -rf build && blueprint build manager && blueprint build pool  && blueprint build stablecoin  && blueprint build userPosition && blueprint build stablecoinWallet",
        "test": "jest --verbose",


        "deploy-stablecoin": "yarn run-script deployStablecoin",
        "deploy-manager": "yarn run-script deployManager",
        "deploy-pool": "yarn run-script  deployPool",
        "set-deps": "yarn run-script  setDeps",
        "set-settings": "yarn run-script  setSettings",
        "set-price": "yarn run-script  updatePrice",
        "deploy-and-set": "yarn deploy-stablecoin && yarn deploy-manager && yarn deploy-pool && yarn set-deps",

        "deposit-collateral": "yarn run-script 01depositCollateral",
        "withdraw-stablecoin": "yarn run-script 02withdrawStablecoin",
        "repay-stablecoin": "yarn run-script 03repayStablecoin",
        "withdraw-collateral": "yarn run-script 04withdrawCollateral",
        "get-info": "yarn run-script 0info"
    },
    "devDependencies": {
        "@ton/blueprint": "^0.19.0",
        "@ton/core": "~0",
        "@ton/crypto": "^3.2.0",
        "@ton/sandbox": "^0.17.0",
        "@ton/test-utils": "^0.4.2",
        "@ton/ton": "^13.11.1",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.20",
        "jest": "^29.7.0",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.3"
    },
    "dependencies": {
        "@aws-crypto/sha256-js": "^5.2.0"
    }
}
